(* -*- tuareg -*- *)

open StdLabels

let commands =
  [ "build"
  ; "external-lib-deps"
  ; "install"
  ; "installed-libraries"
  ; "runtest"
  ; "uninstall"
  ]

let jbuild =
  String.concat ~sep:""
    ({|
(jbuild_version 1)

(install
 ((section doc)
  (files (manual.org quick-start.org))))

(rule
 ((targets (jbuilder.1))
  (action  (with-stdout-to ${@}
            (run ${bin:jbuilder} --help=groff)))
  (description ("Generating man pages for jbuilder main command"))
))
|} :: List.map commands ~f:(fun cmd ->
        Printf.sprintf {|
(rule
 ((targets (jbuilder-%s.1))
  (action  (with-stdout-to ${@}
            (run ${bin:jbuilder} %s --help=groff)))
  (description ("Generating man pages for jbuilder sub-command %s"))
))
|} cmd cmd cmd)
  @ [ Printf.sprintf {|
(install
 ((section man)
  (files (
    jbuilder.1
    %s
    ))))
|} (String.concat ~sep:"\n    "
      (List.map commands ~f:(Printf.sprintf "jbuilder-%s.1")))
    ])

let () =
  Jbuild_plugin.V1.send jbuild
