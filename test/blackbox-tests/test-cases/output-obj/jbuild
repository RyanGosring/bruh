(alias
 ((name all)
  (deps (test.exe test.bc test.exe.o test.so stub))))

(executable
 ((name test)
  (modes ((byte   exe          )
          (native exe          )
          (byte   object       )
          (native object       )
          (byte   shared_object)
          (native shared_object)))))

(rule
 ((targets (stub_native))
  (deps (stub.c test.exe.o))
  (action (run ${CC} -o ${@} -I ${ocaml_where} -I . test.exe.o stub.c
           ${bytecomp_c_libraries}))))

(rule
 ((targets (stub_byte))
  (deps (stub.c test.bc.o))
  (action (run ${CC} -o ${@} -I ${ocaml_where} -I . test.bc.o stub.c
           ${native_c_libraries}))))

(install
 ((section bin)
  (files (stub_native stub_byte))
  (package stub)))
