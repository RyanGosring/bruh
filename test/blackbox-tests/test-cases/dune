(env
 (_
  (binaries ../utils/dune_cmd.exe)))

(alias
 (name test-deps)
 (deps
  ../utils/dune_cmd.exe
  %{bin:dune_cmd}
  (package dune)))

(cram
 (applies_to :whole_subtree)
 (deps
  (alias test-deps)))

(subdir
 bisect-ppx
 (cram
  ;  disabled for now
  (enabled_if false)))

