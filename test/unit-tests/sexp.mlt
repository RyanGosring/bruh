open Stdune;;
open Sexp.Of_sexp;;

let pp_sexp_ast =
  let rec subst_atoms ~f (s : Sexp.t) =
    match s with
    | Atom a -> f a
    | Quoted_string _ -> s
    | List xs -> List (List.map ~f:(subst_atoms ~f) xs)
  in
  fun ppf sexp ->
    sexp
    |> Sexp.Ast.remove_locs
    |> subst_atoms ~f:(fun (A s) ->
      List [(Sexp.atom "atom"); Sexp.atom_or_quoted_string s])
    |> Sexp.pp ppf
;;

#install_printer pp_sexp_ast;;
